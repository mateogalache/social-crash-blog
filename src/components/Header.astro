<script>
    document.addEventListener("DOMContentLoaded", function() {
        const scrollHeader = document.getElementById('scroll-header');
        let lastScrollY = window.scrollY;

        if (scrollHeader) {
            window.addEventListener('scroll', () => {
                if (window.scrollY > 100 && window.scrollY > lastScrollY) {
                    scrollHeader.style.transform = 'translateY(0)';
                    scrollHeader.style.opacity = '1';
                } else if (window.scrollY < 100 || window.scrollY < lastScrollY) {
                    scrollHeader.style.transform = 'translateY(-200px)';
                    scrollHeader.style.opacity = '0';
                }
                lastScrollY = window.scrollY;
            });
        } else {
            console.warn('Element with id "scroll-header" not found.');
        }

        const dropdown = document.getElementById('dropdown');
        const dropdownButton = document.getElementById('dropdownButton');

        dropdownButton?.addEventListener('click', () => {
            if (dropdown?.classList.contains('translate-y-0')) {
                dropdown?.classList.remove('translate-y-0', 'opacity-100', 'pointer-events-auto', 'visibility-visible');
                dropdown?.classList.add('-translate-y-4', 'opacity-0', 'pointer-events-none', 'visibility-hidden');
            } else {
                dropdown?.classList.remove('-translate-y-4', 'opacity-0', 'pointer-events-none', 'visibility-hidden');
                dropdown?.classList.add('translate-y-0', 'opacity-100', 'pointer-events-auto', 'visibility-visible');
            }
        });

        const dropdown2 = document.getElementById('dropdown-2');
        const dropdownButton2 = document.getElementById('dropdownButton-2');

        dropdownButton2?.addEventListener('click', () => {
            if (dropdown2?.classList.contains('translate-y-0')) {
                dropdown2?.classList.remove('translate-y-0', 'opacity-100', 'pointer-events-auto', 'visibility-visible');
                dropdown2?.classList.add('-translate-y-4', 'opacity-0', 'pointer-events-none', 'visibility-hidden');
            } else {
                dropdown2?.classList.remove('-translate-y-4', 'opacity-0', 'pointer-events-none', 'visibility-hidden');
                dropdown2?.classList.add('translate-y-0', 'opacity-100', 'pointer-events-auto', 'visibility-visible');
            }
        });
    });
</script>



    