---
import Layout from '../../layouts/Layout.astro';
import { getArticleContent,getTitles,titles } from 'configFireBase';

await getTitles();

export const getStaticPaths = () => {
  return titles.slice(1).map((title) => ({
    params: { id: title },
  }));
};
const { id } = Astro.params
const articleContent = await getArticleContent(id);


---

<Layout title="Blog">
  <div class="px-0 py-0 sm:px-60 sm:py-20">
    <div set:html={articleContent}></div>
  </div>
</Layout>
